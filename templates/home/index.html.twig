{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<header class="container-fluid">
		<h1>
			CatChat
		</h1>
		<h2>Un chat 💬, des chats 🐈</h2>
	</header>
	<main class="container">
		<h2>Derniers messages</h2>

		<div class="grid" id="messages" {{ turbo_stream_listen('chat') }}></div>
		<turbo-frame id="message_form">
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<button>Envoyer</button>
			{{ form_end(form) }}
		</turbo-frame>
	</main>
{% endblock %}
